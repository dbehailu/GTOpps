<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:paddingTop="50dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp">

    <EditText
        android:id="@+id/title"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/add_an_item"
        android:textSize="50px" />


    <ImageView
        android:id="@+id/ivName"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/tvName"
        android:layout_toStartOf="@id/tvName"
        android:paddingRight="5dp"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp" />

    <EditText
        android:id="@+id/tvName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:hint="Item Name" />


    <ImageView
        android:id="@+id/ivDescription"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/tvDescription"
        android:layout_alignStart="@id/ivName"
        android:paddingRight="5dp"
        android:src="@drawable/ic_filter_list_black_24dp" />

    <EditText
        android:id="@+id/tvDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:hint="@string/description"
        android:inputType="none"/>

    <ImageView
        android:id="@+id/ivLatitude"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@id/tvLatitude"
        android:layout_below="@id/ivDescription"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tvLatitude"
        android:paddingRight="5dp"
        android:src="@drawable/ic_location_searching_black_24dp" />

    <EditText
        android:id="@+id/tvLatitude"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescription"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:hint="@string/latitude"
        android:inputType="numberDecimal"/>

    <ImageView
        android:id="@+id/ivLongitude"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/ivDescription"
        android:layout_alignTop="@+id/tvLongitude"
        android:paddingRight="5dp"
        android:src="@drawable/ic_my_location_black_24dp" />

    <EditText
        android:id="@+id/tvLongitude"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvLatitude"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:hint="@string/longitude"
        android:inputType="numberDecimal"/>

    <ImageView
        android:id="@+id/ivStartTime"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/ivDescription"
        android:layout_alignTop="@+id/tvStartTime"
        android:paddingRight="5dp"
        android:src="@drawable/ic_access_time_black_24dp" />

    <ImageView
        android:id="@+id/ivEndTime"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/ivName"
        android:layout_alignTop="@+id/tvEndTime"
        android:paddingRight="5dp"
        android:src="@drawable/ic_access_time_black_24dp" />

    <EditText
        android:id="@+id/tvEndTime"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivStartTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="End Time"
        android:inputType="number"/>


    <EditText
        android:id="@+id/tvStartTime"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvLongitude"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:hint="Start Time"
        android:inputType="number"/>

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/ivName"
        android:layout_below="@+id/ivEndTime"
        android:paddingRight="5dp"
        android:src="@drawable/ic_person_black_24dp" />

    <EditText
        android:id="@+id/tvUser"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvEndTime"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:hint="Username"
        android:inputType="none"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:text="Save" />

</RelativeLayout>