<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="27dp"
        android:text="Free Pizza!"
        android:textSize="24sp"
        android:padding="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_upVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="-7dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_downVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="-6dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/text_downVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_title"
        android:layout_marginEnd="-74dp"
        android:layout_marginBottom="6dp"
        android:layout_toStartOf="@+id/fab_downVote"
        android:text="#"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_upVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fab_downVote"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="13dp"
        android:text="#"
        android:textSize="24sp" />

</RelativeLayout>